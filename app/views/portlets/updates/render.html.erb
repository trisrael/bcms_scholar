<div class='updates portlet'>
<h3><%=h @portlet.name %></h3>
<ul>


<% @updates.group_by {|u| u.updated_at.beginning_of_day}.each do |day, updates| %>
  <div class='timestamp'>
    <%= day.to_datetime.strftime("%a, %d %b %Y").squeeze(' ')%>
  </div>
  <% updates.each do |update| %>
    <%= render_connectable update %>
  <% end %>  
  <% end %>
</ul>
</div>
