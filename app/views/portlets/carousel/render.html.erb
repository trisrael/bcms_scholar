
<div class='carousel_container'>
<div class='carousel'>

 <div class='content'>
<% @carousel_pages.each_with_index do |cp, i| %>
  <%= render_connectable(cp)%>
<% end %>  
 </div>
 </div>
</div>

<% content_for :head do %>
   <%= javascript_include_tag('jquery.cycle.all')%>
   <%= javascript_include_tag('jquery.easing.1.3')%>
    <script type="text/javascript">
     $().ready(function(){ 


$(".descriptive").each(function(i, el){
  var elObj = $(el);
  var newHeight = 420 - elObj.height();
  elObj.css("top", newHeight); 
});


      $(".carousel").before("<ul id='pager'/>").cycle({
 fx: 'fade',
 sync: true, 
 timeout: 15000,
 speed: 1500,
 pause: true,
 slideExpr: '.carousel_page', 
 timeout: 8000,
 pager: '#pager', 
 pagerAnchorBuilder: function(idx, slide) { 
        return '<li><a href="#">' + slide.title + '</a></li>'; 
    } 
}
);

});
    </script>
<% end %>



